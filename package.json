{
	"name": "amplify-adapter-customized",
	"version": "0.2.1",
	"description": "Customized Adapter for SvelteKit v1/v2 + Amplify SSR CI/CD",
	"license": "MIT",
	"type": "module",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/balaji-b-v/amplify-adapter.git"
	},
	"publishConfig": {
		"access": "public"
	},
	"exports": {
		".": {
			"types": "./index.d.ts",
			"import": "./index.js"
		},
		"./package.json": "./package.json"
	},
	"types": "index.d.ts",
	"files": [
		"files",
		"index.js",
		"index.d.ts"
	],
	"scripts": {
		"dev": "rimraf files && rollup -cw",
		"build": "rimraf files && rollup -c",
		"lint": "prettier --check .",
		"format": "prettier --write .",
		"release": "changeset publish",
		"changeset": "changeset"
	},
	"devDependencies": {
		"@changesets/cli": "^2.27.1",
		"@polka/url": "^1.0.0-next.21",
		"@sveltejs/kit": "^2.17.1",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"@types/node": "^20.0.0",
		"c8": "^8.0.0",
		"polka": "^1.0.0-next.22",
		"rimraf": "^6.0.1",
		"sirv": "^3.0.0",
		"typescript": "^4.9.4",
		"vite": "^6.1.0"
	},
	"dependencies": {
		"@rollup/plugin-commonjs": "^25.0.0",
		"@rollup/plugin-json": "^6.0.0",
		"@rollup/plugin-node-resolve": "^15.0.1",
		"rollup": "^3.34.4"
	},
	"peerDependencies": {
		"@sveltejs/kit": "^1.0.0 || ^2.0.0"
	}
}
